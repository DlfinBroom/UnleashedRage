@model IEnumerable<UnleashedRage.Models.User>

@{
    ViewData["Title"] = "Index";
}

<br id="spacer" />

<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Email Address
            </th>
            <th>
                Send Emails?
            </th>
            <th>
                Current Page
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Username
            </td>
            <td>
                @item.Email
            </td>
            @if (item.SendEmail == true)
            {
                <td>
                    Yes
                </td>
            }
            else
            {
                <td>
                    No
                </td>
            }
            <td>
                @item.CurrPage
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
